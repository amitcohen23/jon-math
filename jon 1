<div id="results"></div>

<script>
  const correctAnswers = [12, 9, 12, 4, 17, 11, 42, 4, 17, 16];
  const explanations = [
    "7 + 5 זה חיבור של 7 ועוד 5, התוצאה היא 12.",
    "15 - 6 זה חיסור 6 מ-15, נשאר 9.",
    "4 × 3 זה כפל, כלומר 4+4+4=12.",
    "20 ÷ 5 זה חלוקה של 20 ל-5 חלקים שווים, כל חלק הוא 4.",
    "9 + 8 זה 9 ועוד 8, התוצאה היא 17.",
    "18 - 7 זה חיסור 7 מ-18, התוצאה היא 11.",
    "6 × 7 זה כפל, 6+6+6+6+6+6+6 = 42.",
    "24 ÷ 6 זה חלוקה של 24 ל-6 חלקים שווים, כל חלק הוא 4.",
    "5 + 12 זה חיבור של 5 ועוד 12, התוצאה היא 17.",
    "30 - 14 זה חיסור 14 מ-30, התוצאה היא 16."
  ];

  function checkAnswers() {
    let score = 0;
    let resultHTML = "<h2>תוצאות:</h2>";

    for (let i = 1; i <= 10; i++) {
      const userAnswer = Number(document.getElementById("a"+i).value);
      const correct = correctAnswers[i-1];
      resultHTML += `<div><strong>שאלה ${i}:</strong> התשובה שלך: ${userAnswer} - `;
      if (userAnswer === correct) {
        score++;
        resultHTML += "<span style='color:green'>נכון!</span>";
      } else {
        resultHTML += `<span style='color:red'>לא נכון.</span><br><em>הסבר: ${explanations[i-1]}</em>`;
      }
      resultHTML += "</div><hr>";
    }

    resultHTML += `<h3>סך הכל נקודות: ${score} מתוך 10</h3>`;
    document.getElementById("results").innerHTML = resultHTML;
  }
</script>

